@model Carware.ViewModels.SellCarViewModel

@{
    ViewData["Title"] = "Sell";
}


<h2>Sell Car</h2>
<div class="container bg-black">
    <div class="row justify-content-center">
        <div class="card col-10 col-lg-4 mb-4 bg-primary mr-2">
            <div class="card-header">
                <p>Car Details</p>
            </div>
            <div class="card-body">
                <div class="card-title">@Model.Car.Make @Model.Car.Model</div>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
        <div class="col-10 col-lg-4 mb-4 bg-white">
            <form asp-action="Sell">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SellingPrice" class="control-label">Selling Price</label>
                    <input asp-for="SellingPrice" class="form-control" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountGiven" class="control-label">Discount Given</label>
                    <input asp-for="DiscountGiven" class="form-control" />
                    <span asp-validation-for="DiscountGiven" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 col-lg-8 mb-4 bg-white mr-2">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="card-title">Primary card title</div>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
        </div>

    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
