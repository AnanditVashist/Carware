@model Carware.ViewModels.SellCarViewModel

@{
    ViewData["Title"] = "Sell";
}

<form asp-action="Sell" id="sellForm" class="mt-4">
    @Html.HiddenFor(m => m.Car.Id);
    <div class=" card bg-white " id="sellContainer">
        <div class="card-header text-center">Transaction details</div>
        <div class="container">
            <div class="row justify-content-center mt-3">
                <div class="card col-10 col-lg-4 mb-4 bg-white mr-2 p-0">
                    <div class="card-header">
                        Car Details
                    </div>
                    <div class="card-body">
                        <div class="card-title">@Model.Car.Year @Model.Car.Make @Model.Car.Model</div>
                        <p class="card-text">Purchase Price- @Model.Car.PurchasePrice</p>
                        <p class="card-text">Ideal Selling Price- @Model.Car.IdealSellingPrice</p>
                        <p class="card-text">Max Discount- @Model.Car.MaxDiscount</p>
                    </div>
                </div>
                <div class="card col-10 col-lg-4 mb-4 bg-white p-0">
                    <div class="card-header">Payment Details</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SellingPrice" class="control-label">Selling Price</label>
                        <input asp-for="SellingPrice" class="form-control" />
                        <span asp-validation-for="SellingPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountGiven" class="control-label">Discount Given</label>
                        <input asp-for="DiscountGiven" class="form-control" />
                        <span asp-validation-for="DiscountGiven" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="mb-4 bg-white mr-2" id="customerDetails">
                    <div class="card">
                        <div class="card-header">Customer Details</div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CustomerDetails.FirstName" class="control-label">First Name</label>
                                <input asp-for="CustomerDetails.FirstName" class="form-control" />
                                <span asp-validation-for="CustomerDetails.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerDetails.LastName" class="control-label">Last Name</label>
                                <input asp-for="CustomerDetails.LastName" class="form-control" />
                                <span asp-validation-for="CustomerDetails.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerDetails.EmailAddress" class="control-label">Email Address</label>
                                <input asp-for="CustomerDetails.EmailAddress" class="form-control" />
                                <span asp-validation-for="CustomerDetails.EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerDetails.PhoneNumber" class="control-label">Phone Number</label>
                                <input asp-for="CustomerDetails.PhoneNumber" class="form-control" />
                                <span asp-validation-for="CustomerDetails.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group text-center">
                <input type="submit" value="Sell" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to Inventory</a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
